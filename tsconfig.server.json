{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/server",
    "rootDir": "./server",
    "module": "commonjs",
    "target": "ES2020",
    "esModuleInterop": true,
    "allowJs": false,
    "noEmit": false,
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["server/**/*", "shared/**/*"],
  "exclude": [
    "client",
    "client/**/*",
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
